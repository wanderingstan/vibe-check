{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Monitor",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/vibe-check.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python",
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "type": "swift",
      "request": "launch",
      "args": [],
      "cwd": "${workspaceFolder:vibe-check-macos}",
      "name": "Debug VibeCheck",
      "target": "VibeCheck",
      "configuration": "debug",
      "preLaunchTask": "swift: Build Debug VibeCheck"
    },
    {
      "type": "swift",
      "request": "launch",
      "args": [],
      "cwd": "${workspaceFolder:vibe-check-macos}",
      "name": "Release VibeCheck",
      "target": "VibeCheck",
      "configuration": "release",
      "preLaunchTask": "swift: Build Release VibeCheck"
    }
  ]
}
